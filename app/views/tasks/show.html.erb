<h1> <%= @task.title %></h1>

<p> <%= @task.details %></p>

<div id="state">
  <% if @task.completed %>
    <i class="fas fa-check-square"></i> This task is completed!
  <% else %>
    <i class="far fa-square"></i> This task is not completed yet!
  <% end %>
</div>

<p> <%= link_to 'Edit', edit_task_path(@task) %> </p>

<p> <%= link_to 'Delete', task_path(@task), method: :delete %> </p>

<p> <%= link_to 'Back to list', '/tasks' %> </p>

