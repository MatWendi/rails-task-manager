
<h1>To do list </h1>

<% @tasks.each do |task| %>
<ul>
  <li>

    <% if task.completed %>
       <i class="fas fa-check-square"></i>
    <% else %>
       <i class="far fa-square"></i>
    <% end %>
      <%= link_to task.title, "/tasks/#{task.id}"  %>
  </li>
</ul>
<% end %>

<h2><%= link_to 'Create a new task', tasks_new_path  %></h2>
